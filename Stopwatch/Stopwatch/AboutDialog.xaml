<Window x:Class="Stopwatch.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AboutDialog" 
        Height="300" 
        Width="300"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="resources\images\logo.png" Stretch="None" VerticalAlignment="Center"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock Name="txtAppName">Stopwatch</TextBlock>
                <TextBlock Name="txtVersion">1.0.0.0</TextBlock>
                <TextBlock Name="txtCopyright">Copyright</TextBlock>
            </StackPanel>
        </StackPanel>
        <Button Name="btnOk" Grid.Row="1" Grid.Column="0" Padding="5,0,5,0" Margin="5" Content="OK" HorizontalAlignment="Center" IsDefault="True" Click="btnOk_Click"></Button>
    </Grid>
</Window>
